
(vbs:require-erlang)

(vbs:define-erlang-application 'mosaic_harness
	erl: "\\./sources/.*\\.erl"
	hrl: "\\./sources/.*\\.hrl"
	additional-ebin: "\\./sources/.*\\.app")

(vbs:require-gcc)

(vbs:define-environment-variable 'mosaic-pkg-jansson "mosaic_pkg_jansson")

(vbs:define-gcc-application 'mosaic_harness
	c: "\\./sources/mosaic_harness\\.c"
	cflags: '( "-I${mosaic_pkg_jansson}/include" )
	ldflags: '( "-static" "-ljansson" "-L${mosaic_pkg_jansson}/lib" ))
